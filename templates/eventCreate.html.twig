{% extends 'base.html.twig' %}

{% block body %}
    <h2>Nouvel évènement</h2>

    {{ form_start(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.description) }}

    <div class="form-group">Administrateur</div>
    <div class="form-group row">
        <div class="col-8">
            <input type="text" id="adminName" class="form-control form-control-sm" placeholder="{{ admin.name }}" disabled>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-8">
            <input type="text" id="adminMail" class="form-control form-control-sm" placeholder="{{ admin.mail }}" disabled>
        </div>
    </div>

    <div class="userEvents" data-prototype="
            {% filter escape %}
                {{ include('addUserOnEvent.html.twig', { 'form': form.userEvents.vars.prototype }) }}
            {% endfilter %}">
        {% for userEvent in form.userEvents if form.userEvents|length > 0 %}
            <div class="user">
                {{ form_row(userEvent.admin.name) }}
                {{ form_row(userEvent.admin.mail) }}
            </div>
        {% else %}
            {% do form.userEvents.setRendered %}
        {% endfor %}
    </div>

    <div class="row">
        <div class="col-6">
            <a class="btn btn-block btn-danger btn-lg" href="{{ path("event_list", {'userId': admin.id}) }}"
               role="button">Cancel</a>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-block btn-success btn-lg">Save</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock body %}

{% block js %}
    {{ parent() }}

    <script>
        var $collectionHolder;
        var $addUserButton = $('<div class="form-group row"><div class="col-12"><button type="button" class="btn btn-block btn-primary shadow-sm">Ajouter un participant</button></div></div>');

        jQuery(document).ready(function () {
            $collectionHolder = $('.userEvents');
            $collectionHolder.append($addUserButton);
            $collectionHolder.data('index', $collectionHolder.find('.admin').length);

            $addUserButton.on('click', function (e) {
                addUserForm($collectionHolder, $addUserButton);
            });

            $('.user').each(function () {
                addUserFormDeleteButton($(this));
            })
        });

        function addUserForm($collectionHolder, $addUserButton) {
            var prototype = $collectionHolder.data('prototype');
            var index = $collectionHolder.data('index');
            var newForm = prototype;

            newForm = newForm.replace(/__name__/g, index);
            $collectionHolder.data('index', index + 1);

            $newForm = $(newForm);
            $addUserButton.before($newForm);
            addUserFormDeleteButton($newForm, index);
        }

        function addUserFormDeleteButton($form, index) {
            var $removeUserButton = $('#remove' + index);
            $removeUserButton.on('click', function (e) {
                $form.remove();
            });
        }
    </script>

{% endblock %}