{% extends 'base.html.twig' %}

{% block title %}Sign up!{% endblock %}

{% block body %}
    <h2>Créez un compte</h2>
    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password, {'help': 'Le mot de passe doit comporter au moins 8 caractères avec au moins 1 chiffres, 1 majuscule et une minuscule.'}) }}
    <div class="row">
        <div class="col-6">
            <a class="btn btn-block btn-danger btn-lg" href="{{ path("app_login") }}"
               role="button">Cancel</a>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-block btn-success btn-lg">OK</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
