{% extends 'base.html.twig' %}

{% block title %}Sign up!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-4 offset-md-4">

            <h2>Cr√©ez un compte</h2>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}} ) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.password,
                    {'attr': {'placeholder': 'Mot de passe'}} ) }}
                {{ form_help(form.password) }}
                {{ form_errors(form.password) }}
            </div>
            <div class="row">
                <div class="col-6">
                    <a class="btn btn-block btn-danger btn-lg" href="{{ path("app_login") }}"
                       role="button">Annule</a>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-block btn-success btn-lg">Signup</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
