{% extends 'base.html.twig' %}

{% block body %}
    <h1>Nouvelle opération</h1>

    {{ form_start(form) }}

    {{ form_row(form.date) }}
    {{ form_row(form.description) }}
    {{ form_row(form.category) }}

    <div class="form-group row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm">
            Dépenses
        </div>
        <div class="col-sm">
            Paiements
        </div>
    </div>
    <div class="form-group row">
        <div class="col-form-label col-sm-2">
            <div>user 1</div>
        </div>
        <div class="col-sm">
            {{ form_widget(form.expenses[0].amount) }}
        </div>
        <div class="col-sm">
            {{ form_widget(form.payments[0].amount) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-form-label col-sm-2">
            <div>user 2</div>
        </div>
        <div class="col-sm">
            {{ form_widget(form.expenses[1].amount) }}
        </div>
        <div class="col-sm">
            {{ form_widget(form.payments[1].amount) }}
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save</button>

    {{ form_end(form) }}

{% endblock body %}
