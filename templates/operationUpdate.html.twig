{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <h2>Modification opération</h2>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form.date) }}
                {{ form_errors(form.date) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.description, {'attr': {'placeholder': 'description'}} ) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.category, {'attr': {'placeholder': 'catégorie'}} ) }}
                {{ form_errors(form.category) }}
            </div>
            <div class="form-group row">
                <div class="col-4">
                </div>
                <div class="col-5">
                    Paiement
                </div>
                <div class="col-3">
                    Parts
                </div>
            </div>
            {% for expense in form.expenses %}
                <div class="form-group row">
                    <div class="col-form-label col-4">
                        <div>{{ form_label(expense.expense) }}</div>
                    </div>
                    <div class="col-5">
                        {{ form_widget(expense.expense) }}
                    </div>
                    <div class="col-3">
                        {{ form_widget(expense.payment) }}
                    </div>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-6">
                    <a class="btn btn-block btn-danger btn-lg"
                       href="{{ path("operation_list", {'eventId': operation.event.id}) }}"
                       role="button">Annule</a>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-block btn-success btn-lg">Enregistre</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}
