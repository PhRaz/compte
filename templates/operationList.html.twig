{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h2>{{ event.name }}</h2>
        </div>
    </div>
    <div class="row bg-light">
        <div class="col-3 font-weight-bold">Date</div>
        <div class="col-6 font-weight-bold">Description</div>
        <div class="col-3 font-weight-bold">Dépense</div>
    </div>
    {% set grand_total = 0 %}
    {% for operation in event.operations if event.operations|length > 0 %}
        <a data-toggle="collapse" data-target="#operation_{{ operation.id }}" href="#operation_{{ operation.id }}"
           class="row accordion-toggle border-top" style="text-decoration: none;">
            <div class="col-3">{{ operation.date|date('d/m/y') }}</div>
            <div class="col-6 text-truncate">{{ operation.description }}</div>
            <div class="col-3 text-right">
                {% set expense_total = 0 %}
                {% for expense in operation.expenses if expense.amount > 0 %}
                    {% set expense_total = expense_total + expense.amount %}
                {% endfor %}
                {{ expense_total|number_format('2', ',', ' ') }} €
            </div>
        </a>
        <div class="row border-top bg-light">
            <div class="col-12 hidden">
                <div class="row accordion-body collapse" id="operation_{{ operation.id }}">
                    <div class="col-12">
                        <p class="font-weight-light">Opération enregistrée par {{ operation.user.name }}
                            dans {{ operation.category }}</p>
                    </div>
                    <div class="col-6">
                        <table class="table table-sm">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Dépense</th>
                                <th>Paiement</th>
                                <th>Balance</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for name, data in balance[operation.id] %}
                                {% if data.balance >= 0 %}
                                    {% set color = "text-success" %}
                                {% else %}
                                    {% set color = "text-danger" %}
                                {% endif %}
                                <tr>
                                    <th>{{ name }}</th>
                                    <td class="text-right">{{ data.expense|number_format('2', ',', ' ') }} €</td>
                                    <td class="text-right">{{ data.amountToPay|number_format('2', ',', ' ') }} €</td>
                                    <td class="text-right {{ color }}">{{ data.balance|number_format('2', ',', ' ') }}
                                        €
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {% set grand_total = grand_total + expense_total %}
    {% else %}
        <div class="row">
            <div class="col-12">aucune opération sur cet évènement</div>
        </div>
    {% endfor %}
    <div class="row bg-light border-top">
        <div class="col-12 font-weight-bold">Total</div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <strong>{{ grand_total|number_format('2', ',', ' ') }} €</strong>
        </div>
    </div>
    <div class="row bg-light border-top">
        <div class="col-12 font-weight-bold">Balance</div>
    </div>
    <div class="row">
        {% for user, data in total %}
            {% if data.balance >= 0 %}
                {% set color = "text-success" %}
            {% else %}
                {% set color = "text-danger" %}
            {% endif %}
            <div class="col-6">{{ user }}</div>
            <div class="col-6 {{ color }} text-right">
                <strong>{{ data.balance|number_format('2', ',', ' ') }} €</strong>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block navbar %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('user_list') }}">Utilisateurs</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path("event_list", {'userId': event.userEvents[0].user.id}) }}">Evènements</a>
    </li>
    <li class="nav-item">
        <a class="nav-link"
           href="{{ path("operation_create", {'eventId': event.id, 'userId': event.userEvents[0].user.id}) }}">
            Nouvelle opération</a>
    </li>
{% endblock %}
