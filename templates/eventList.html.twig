{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12 offset-md-2 col-md-8 mb-2">
            <div class="row">
                {% for userEvent in user.userEvents if user.userEvents|length > 0 %}
                    {% set event = userEvent.event %}
                    <div class="col-12 col-md-6">
                        <div class="card mt-2 mb-2">
                            <div class="card-header">
                                <div class="row">
                                    {% if userEvent.administrator is same as(true) %}
                                        <div class="col-9">
                                            <h4>{{ event.name }}</h4>
                                        </div>
                                        <div class="col-3">
                                            <a class="btn btn-block btn-primary btn-sm"
                                               href="{{ path("event_update", {'eventId': event.id}) }}"
                                               role="button"><i class="fas fa-cog"></i></a>
                                        </div>
                                    {% else %}
                                        <div class="col-10">
                                            <h4>{{ event.name }}</h4>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="card-body shadow">
                                <p class="lead">{{ event.description }}</p>
                                <div class="mb-4">
                                    {% for userEvent2 in event.userEvents %}
                                        <p class="mb-0">{{ userEvent2.pseudo }}{% if userEvent2.administrator is same as(true) %} (administrateur){% endif %}</p>
                                    {% endfor %}
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <a class="btn btn-block btn-primary btn-sm shadow-sm"
                                           href="{{ path("operation_list", {'eventId': event.id}) }}"
                                           role="button"><i class="fas fa-book-open"></i> Opérations</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {% if newEventButton is same as (true) %}
                    <div class="col-12 col-md-6">
                        <div class="card mt-2 mb-2">
                            <div class="card-body">
                                <p class="lead">Créez un nouvel événement.</p>
                                <a class="btn btn-block btn-primary btn-lg"
                                   href="{{ path('event_create') }}"
                                   role="button"><i class="fas fa-plus"></i></a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 col-md-6">
                        <div class="card mt-2 mb-2">
                            <div class="card-body">
                                <p class="lead">Vous avez atteint le nombre maximum d'événements autorisé.</p>
                                <a class="btn btn-block btn-secondary btn-lg disabled"
                                   href="" role="button">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock body %}
