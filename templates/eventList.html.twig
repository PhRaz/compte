{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {% for userEvent in user.userEvents if user.userEvents|length > 0 %}
            {% set event = userEvent.event %}
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="card mt-2 mb-2">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-10"><h4>{{ event.name }}</h4></div>
                            <div class="col-2">
                                <span style="font-size: 24px;">
                                    <i class="fas fa-cog"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body shadow">
                        <p class="lead">{{ event.description }}</p>
                        <div class="mb-4">
                            {% for userEvent2 in event.userEvents %}
                                <p class="mb-0">{{ userEvent2.pseudo }}{% if userEvent2.administrator is same as(true) %} (administrateur){% endif %}</p>
                            {% endfor %}
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <a class="btn btn-block btn-primary btn-sm shadow-sm"
                                   href="{{ path("operation_list", {'eventId': event.id}) }}"
                                   role="button"><i class="fas fa-book-open"></i> Opérations</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>aucun évènement</p>
            </div>
        {% endfor %}
    </div>
{% endblock body %}

{% block navbar %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('event_create', {'id': user.id}) }}">Créer un nouvel évènement</a>
    </li>
{% endblock %}
