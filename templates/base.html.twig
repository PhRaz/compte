<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <title>{% block title %}dichipot{% endblock %}</title>
</head>
<body>

<nav class="navbar navbar-expand navbar-light bg-light sticky-top">
    <a class="navbar-brand" href="{{ path('home') }}">dichipot</a>
    <ul class="navbar-nav ml-auto">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li class="nav-item">
                <a class="btn btn-block btn-light" href="{{ path('app_logout') }}"><i
                            class="fas fa-sign-out-alt fa-lg"></i></a>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="btn btn-block btn-light" href="{{ path('app_login') }}"><i
                            class="fas fa-sign-in-alt fa-lg"></i></a>
            </li>
        {% endif %}
    </ul>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    {% block body %}
    {% endblock %}
    <footer class="border-top mt-3">
        <div class="row small">
            <div class="col-6 text-left text-nowrap">Copyright Â© 2019 PhRazApp</div>
            <div class="col-6 text-right text-nowrap">
                <a href="https://github.com/PhRaz/compte">
                    Available on Github <i class="fab fa-github"></i></a>
            </div>
        </div>
    </footer>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

</body>
</html>
