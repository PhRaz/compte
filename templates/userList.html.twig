{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
    <ul>
        {% for user in users if users
            |length > 0 %}
            <h2>{{ user.name }}</h2>
            <ul>
                <li><a href="mailto:{{ user.mail }}">{{ user.mail }}</a></li>
                <li><a href="{{ path('event_list', {'userId': user.id}) }}">liste des évènements</a></li>
            </ul>
        {% else %}
            <p>aucun utilisateur</p>
        {% endfor %}
    </ul>
{% endblock body %}

{% block navbar %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path("user_create") }}">Créer un nouvel utilisateur</a>
    </li>
{% endblock %}
