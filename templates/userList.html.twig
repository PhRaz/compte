{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
    <ul>
        {% for user in users if users
            |length > 0 %}
            <li>{{ user.name }}
                <ul>
                    <li><a href="mailto:{{ user.mail }}">{{ user.mail }}</a></li>
                    <li><a href="{{ path('event_list', {'userId': user.id}) }}">liste des évènements</a></li>
                </ul>
            </li>
        {% else %}
            <p>aucun utilisateur</p>
        {% endfor %}
    </ul>
    <nav>
        <a href="{{ path('home') }}">retour vers menu</a>
        <a href="{{ path("user_create") }}">Créer un nouvel utilisateur</a>
    </nav>
{% endblock body %}
