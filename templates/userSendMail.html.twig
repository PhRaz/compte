{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <h2>Envoi du résumé</h2>
            <p>Le résumé de vos opérations sera envoyé par mail à l'adresse {{ user.mail }}.</p>
            {{ form_start(form) }}
            <div class="mt-3 row">
                <div class="col-6">
                    <a class="btn btn-block btn-danger btn-lg"
                       href="{{ path("user_summary", {'eventId': event.id}) }}"
                       role="button">Cancel</a>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-block btn-success btn-lg">OK</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
