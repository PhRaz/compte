<div class="user">
    <div class="form-group">Participant</div>
    <div class="form-group row">
        <div class="col-10">
            {{ form_widget(form.pseudo, {'attr': {'placeholder': 'pseudo'}} ) }}
            {{ form_errors(form.pseudo) }}
        </div>
        <div class="col-2">
            <button id="remove__name__" type="button" class="btn btn-block btn-primary shadow-sm">X</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-10">
            {{ form_widget(form.user.mail, {'attr': {'placeholder': 'email'}} ) }}
            {{ form_errors(form.user.mail) }}
        </div>
        <div class="col-4">
        </div>
    </div>
</div>
