<div class="user">
    <hr>
    <div class="row">
        <div class="col-1">
            <i class="fas fa-user"></i>
        </div>
        <div class="col-11">
            <div class="form-group row">
                <div class="col-9">
                    {{ form_widget(form.pseudo, {'attr': {'placeholder': 'pseudo'}} ) }}
                    {{ form_errors(form.pseudo) }}
                </div>
                <div class="col-3">
                    <button id="remove__name__" type="button" class="btn btn-block btn-danger shadow-sm">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-9">
                    {{ form_widget(form.user.mail, {'attr': {'placeholder': 'email'}} ) }}
                    {{ form_errors(form.user.mail) }}
                </div>
                <div class="col-3">
                </div>
            </div>
        </div>
    </div>
</div>
