<div class="user">
    <div class="form-group">Participant</div>
    <div class="form-group row">
        <div class="col-8">
            {{ form_widget(form.pseudo, {'attr': {'class': 'form-control-sm', 'placeholder': 'pseudo'}} ) }}
            {{ form_errors(form.pseudo, {'attr': {'class': 'form-control-sm'}} ) }}
        </div>
        <div class="col-4">
            <button id="remove__name__" type="button" class="btn btn-block btn-primary btn-sm shadow-sm">X</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-8">
            {{ form_widget(form.user.mail, {'attr': {'class': 'form-control-sm', 'placeholder': 'email'}} ) }}
            {{ form_errors(form.user.mail, {'attr': {'class': 'form-control-sm'}} ) }}
        </div>
        <div class="col-4">
        </div>
    </div>
</div>
